mixin top-line()
	// start .top-line
	+b.top-line.block-with-lazy
		.container
			.row
				.col
					+e.logo
						a(href="/")
							img(src="img/svg/logo.svg", alt="")
							+e.DIV.logo-title С-ПРОДЖЕКТ
							+e.DIV.logo-text Организация строительства и&nbsp;дорожного движения

				.col-auto.d-none.d-xl-block
					addr г. Москва, Алтуфьевское&nbsp;ш.,  д.&nbsp;48, корпус&nbsp;1
				+e.cont.col-auto
					+e.tel(href="tel:8495971-3-971") 8 #[span 495] 971-3-971
					.d-none.d-lg-block

						+e.mail(href="mailto:9713971@mail.ru") 9713971@mail.ru
					.d-lg-none
						+e.mail.link-modal(href="#modal-call") Обратный звонок
				.col-auto.d-none.d-lg-block
					+e.btn.link-modal(href="#modal-call") Обратный звонок
				.col-auto
					+b.toggle-menu-mobile--js
						span
				
	// end .top-line

